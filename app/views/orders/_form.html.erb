<%= form_for(@order, :html => {:class=>'form-style-9'}) do |f| %>
<h2>Formulario a Domicilio</h2>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :name, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :Detalles %>...colores o aclaracion sobre tu pedido<br>
    <%= f.text_area :address, rows: 3, cols: 40 %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :telefono %><br>
    <%= f.text_field :pay_type %>
  </div>
  <div class="actions">
    <%= f.submit 'Hacer Pedido' %>
  </div>
  </br>
  <span>*Costo de envio 1$</span>
<% end %>
