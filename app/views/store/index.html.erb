<%= render 'store/navbar' %>

<%= render 'store/carousel' %>


                
                
                <div class="row">

                 
                  
							<% @products.each do |product| %>
	
							
							<div class="col-sm-4 col-lg-4 col-md-4">
                    	    <div class="thumbnail">
							
							<%= image_tag(product.image_url) %>
							
							 <div class="caption">
                                <h4 class="pull-right"><%= number_to_currency(product.price) %></h4>
                                <h4><a href="#"><%= product.title %></a>
                                </h4>
							
							<p><%= sanitize(product.description) %>
							</p>
													
							<%= button_to 'Comprar', line_items_path(product_id: product), remote:true, :class => 'btn btn-primary' %> 
							</div>
							</div>
							  </div>
							
							<% end %>
							
                            
                            
                      
                    </div>

               
                   

                </div>



